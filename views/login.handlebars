<div
  class="container-fluid position-relative d-flex justify-content-around custom-app-container"
>
  <div id="sign-in-form" class="form col-4">
    <h1> Login </h1>
    <div class="input-group my-3">
      <span class="input-group-text" id="form-label"> Email Address: </span>
      <input
        id="user-email"
        type="text"
        class="form-control custom-input"
        placeholder="Enter your email"
        aria-label="example@email.com"
      />
    </div>

    <div class="input-group my-3">
      <span class="input-group-text" id="form-label"> Password </span>
      <input
        id="user-password"
        type="password"
        class="form-control custom-input"
        placeholder="Enter your password"
        aria-label="password"
      />
    </div>

    <button id="sign-in-btn" class="rounded"> Login </button>
  </div>

  <div id="sign-up-form" class="form col-4">
    <h1> Sign Up </h1>
    <div class="input-group">
      <span class="input-group-text" id="form-label"> Username </span>
      <input
        id="register-username"
        type="text"
        aria-label="Username"
        class="form-control custom-input"
        placeholder="Username"
      />
    </div>

    <div class="input-group my-3">
      <span class="input-group-text" id="form-label"> Email Address: </span>
      <input
        id="register-email"
        type="text"
        class="form-control custom-input"
        placeholder="example@email.com"
        aria-label="example@email.com"
      />
    </div>

    <div class="input-group my-3">
      <span class="input-group-text" id="form-label"> Password </span>
      <input
        id="register-password"
        type="password"
        class="form-control custom-input"
        placeholder="Password must be at least 6 characters long"
        aria-label="password"
      />
    </div>

    <p>Confirm your password</p>
    <div class="input-group my-3">
      <span class="input-group-text" id="form-label"> Password </span>
      <input
        id="register-password-confirm"
        type="password"
        class="form-control custom-input"
        placeholder="Password must be at least 6 characters long"
        aria-label="password-confirm"
      />
    </div>

    <div class="input-group my-3">
      <span class="input-group-text" id="form-label"> Location </span>
      <input
        id="register-location"
        type="text"
        class="form-control custom-input"
        placeholder="Enter your location"
        aria-label="location"
      />
    </div>

    <div class="input-group my-3">
      <span class="input-group-text" id="form-label"> Favorite Fruit </span>
      <input
        id="register-fav-fruit"
        type="text"
        class="form-control custom-input"
        placeholder="What is your favorite fruit"
        aria-label="favorite"
      />
    </div>

    <button id="register-btn" class="rounded"> Register Now </button>
  </div>
</div>

<script src="../public/js/login.js"></script>